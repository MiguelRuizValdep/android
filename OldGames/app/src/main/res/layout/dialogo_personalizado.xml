<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/fondo_dialog">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/barra_dialog">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/negro"
            android:gravity="center"
            android:id="@+id/dialogoDatos">

        </TextView>


    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogoTxtOne"
        android:textSize="16sp"
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/negro">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogoTxtTwo"
        android:textSize="16sp"
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/negro">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogoBtn"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="@string/ok"
        android:background="@drawable/selector_envio_mensaje"
        android:textColor="@color/negro">

    </Button>
</LinearLayout>