<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".clasesActividad.DetalleJuego">



        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/barra_juegos">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/barraDtllJuego">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/detalleJiconoJuego"
                        android:layout_width="40dp"
                        android:layout_height="50dp"/>

                    <TextView
                        android:id="@+id/detalleJtituloJ"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="@android:color/white"
                        android:textSize="26sp" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pestaniasJuego"
                app:tabMode="scrollable"
                app:tabTextColor="@android:color/white"
                app:tabGravity="fill">

            </android.support.design.widget.TabLayout>

        </android.support.design.widget.AppBarLayout>




    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paginadorJuego"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@android:color/black"
        android:layout_marginTop="6dp">

    </android.support.v4.view.ViewPager>


</android.support.design.widget.CoordinatorLayout>