<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsJuego.DatosJuego"
    android:background="@android:color/black"
    android:id="@+id/layoutJuego"
    android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/marco_seis"
            android:padding="10dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dtsJuegoGenero"
                android:textColor="@android:color/black"
                android:text="@string/defecto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="3dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dtsJuegoCompany"
                android:textColor="@android:color/black"
                android:text="@string/defecto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dtsJuegoanio"
                android:textColor="@android:color/black"
                android:text="@string/defecto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dtsJuegoDescripcion"
                android:textColor="@android:color/black"
                android:text="@string/defecto"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_gravity="top"/>

        </LinearLayout>




</FrameLayout>